- model_class = Trigger
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:condition) + ':'
  %br
  = @trigger.condition
%p
  %strong= model_class.human_attribute_name(:reading_type) + ':'
  %br
  = @trigger.reading_type
%p
  %strong= model_class.human_attribute_name(:value) + ':'
  %br
  = @trigger.value
%p
  %strong= model_class.human_attribute_name(:state) + ':'
  %br
  = @trigger.state
%p
  %strong= model_class.human_attribute_name(:device_id) + ':'
  %br
  = @trigger.device_id


= link_to t('.back', :default => t("helpers.links.back")), triggers_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_trigger_path(@trigger), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), trigger_path(@trigger), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
