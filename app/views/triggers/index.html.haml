- model_class = Trigger
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:condition)
      %th= model_class.human_attribute_name(:reading_type)
      %th= model_class.human_attribute_name(:value)
      %th= model_class.human_attribute_name(:state)
      %th= model_class.human_attribute_name(:device_id)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @triggers.each do |trigger|
      %tr
        %td= link_to trigger.id, trigger_path(trigger)
        %td= trigger.condition
        %td= trigger.reading_type
        %td= trigger.value
        %td= trigger.state
        %td= trigger.device_id
        %td=l trigger.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_trigger_path(trigger), :class => 'btn btn-default btn-xs'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), trigger_path(trigger), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_trigger_path, :class => 'btn btn-primary'
